
.search-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 0.8rem font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.reset-button
  position: absolute
  top: 0
  bottom: 0
  right: 10px
  font: 16px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777

#search-result
  position: fixed
  background-color: rgba(0,0,0,0.9)
  height: 100%
  width: 100%
  top: 0
  left: 0
  overflow-y: scroll
  overflow-x: hidden
  z-index: 1


.toggleResult
  display: none

#search-result ul
  width: 85%
  margin: 100px auto


#search-result ul li
  display: block
  color: #aaa
  margin: 1.5rem 0.5rem
  border-bottom: 2px solid #2bbc8a

#search-result ul li h1
  font-size: 1rem
  line-height: 1rem
  text-decoration: none
  display: block
  height: 1rem
  width: 80%
  color: #ccc
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  cursor: pointer

#search-result ul li p
  margin: 0.5rem 0
  font-size: 0.6rem
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  

#search-result ul li p em
  color: #ff5858

.no-result
  position: fixed
  top: 30%
  left: 0
  right: 0
  margin: 0 auto
  width: 150px
  text-align: center
  letter-spacing: 0.1rem
  color: #d2d2d2
  font-size: 1rem
  line-height: 1rem
  z-index: 2
  border-bottom: 5px solid rgba(43,188,138,0.8)
  padding-bottom: 0.2rem

